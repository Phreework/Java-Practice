package com.supermarket;


public class Test {
	enum Emenu{
		登陆,
		退出,
		摇奖,
		主菜单
		
	}
	static Emenu infoNumber;
	static boolean isQuit;
	public static void main(String[] args) {
		infoNumber = LoginMenu.print();
		while(isNotQuit()) {
			Menu m = createChildMenu();
			m.print();	
		}
	}
	
	boolean isNotQuit() {
		return isQuit;
	}
	
	Menu createChildMenu(){
		switch  (infoNumber) {
		case 主菜单:
			Menu m = (Menu) new MainMenu();
			return m;
		default:
			Menu d = (Menu) new MainMenu();
			return d;
		}
	}
}
