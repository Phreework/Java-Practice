package com.course.two;

public class ClearSweep {
	public static void main(String[] args) {
		int[][] arr = new int[6][6];
		
		for (int y = 0; y <= 5; y++) {
			for (int x = 0; x <= 5; x++) {
				arr[y][x] = 0;
			}
		}

		for (int x = 0; x <= 4; x++) {
			arr[(int)Math.random()*5][(int)Math.random()*5] = 0;
		}
		
		for (int y = 0; y <= 5; y++) {
			for (int x = 0; x <= 5; x++) {
				System.out.print(arr[y][x]);
			}
			System.out.println();
		}
	}
}
